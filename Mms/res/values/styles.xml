<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Translucent.NoTitleBar.Dark" parent="@*android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowBackground">@color/background</item>
    </style>
    <style name="Theme.Holo.Light" parent="@miui:style/Theme.Light">
        <item name="android:buttonStyle">@style/Widget.Holo.Light.Button</item>
        <item name="android:actionOverflowButtonStyle">@miui:style/Widget.Holo.Light.ActionButton.Overflow</item>
    </style>
    <style name="Theme.Holo.Light.Main" parent="@style/Theme.Holo.Light">
        <item name="android:windowAnimationStyle">@style/MiuiPhoneAnimations</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
    </style>
    <style name="Theme.Holo.Light.NoActionBar" parent="@style/Theme.Holo.Light">
        <item name="android:windowAnimationStyle">@style/MiuiPhoneAnimations</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle.NoActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>
    <style name="MiuiPhoneAnimations" parent="@*android:style/Animation.Activity">
        <item name="android:taskToBackEnterAnimation">@miui:anim/miui_phone_close_enter</item>
        <item name="android:taskToBackExitAnimation">@miui:anim/miui_phone_close_exit</item>
    </style>
    <style name="Theme.Holo.Light.Dialog" parent="@*android:style/Theme.Holo.Light.Dialog">
        <item name="android:buttonStyle">@style/Widget.Holo.Light.Button</item>
    </style>
    <style name="Theme.Holo.Light.Dialog.NoActionBar" parent="@*android:style/Theme.Holo.Light.Dialog.NoActionBar">
        <item name="android:buttonStyle">@style/Widget.Holo.Light.Button</item>
    </style>
    <style name="ActionBarStyle" parent="@miui:style/Widget.Holo.Light.ActionBar.Solid.HomeUp">
        <item name="android:displayOptions">useLogo|homeAsUp</item>
    </style>
    <style name="ActionBarStyle.NoActionBar" parent="@style/ActionBarStyle">
        <item name="android:displayOptions"></item>
    </style>
    <style name="ListItem">
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/normal_list_item_bg</item>
        <item name="android:paddingLeft">@dimen/list_item_padding_outer</item>
        <item name="android:paddingTop">@dimen/list_item_padding_outer</item>
        <item name="android:paddingRight">@dimen/list_item_padding_outer</item>
        <item name="android:paddingBottom">@dimen/list_item_padding_outer</item>
    </style>
    <style name="ListItem.Narrow" parent="@style/ListItem">
        <item name="android:background">@miui:drawable/list_medium_middle_item_background</item>
        <item name="android:paddingLeft">@null</item>
        <item name="android:paddingTop">@dimen/list_item_padding_outer</item>
        <item name="android:paddingRight">@null</item>
        <item name="android:paddingBottom">@dimen/list_item_padding_outer</item>
    </style>
    <style name="ListItemContent">
        <item name="android:paddingLeft">@dimen/list_item_padding_inner</item>
        <item name="android:paddingRight">@dimen/list_item_padding_inner</item>
    </style>
    <style name="Widget.Holo.Light.Button" parent="@*android:style/Widget.Holo.Light.Button">
        <item name="android:minWidth">0.0dip</item>
        <item name="android:minHeight">0.0dip</item>
    </style>
    <style name="TextAppearance">
        <item name="android:textColorHighlight">@color/text_color_highlight</item>
        <item name="android:textColorLink">@color/text_color_link</item>
        <item name="android:shadowColor">@color/text_color_primary_shadow</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>
    <style name="TextAppearance.Primary" parent="@style/TextAppearance">
        <item name="android:textSize">@dimen/text_font_size_huge</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>
    <style name="TextAppearance.Secondary" parent="@style/TextAppearance">
        <item name="android:textSize">@dimen/text_font_size_small</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>
    <style name="TextAppearance.ConversationListItem" parent="@style/TextAppearance">
        <item name="android:shadowColor">@color/conversation_list_item_text_shadow_color</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>
    <style name="TextAppearance.ConversationListItem.Primary" parent="@style/TextAppearance.ConversationListItem">
        <item name="android:textSize">@dimen/conversation_list_item_primary_font_size</item>
        <item name="android:textColor">@color/conversation_primary_text</item>
    </style>
    <style name="TextAppearance.ConversationListItem.Primary.Unread" parent="@style/TextAppearance.ConversationListItem.Primary">
        <item name="android:textSize">@dimen/conversation_list_item_primary_font_size</item>
        <item name="android:textColor">@color/conversation_unread_text</item>
    </style>
    <style name="TextAppearance.ConversationListItem.Secondary" parent="@style/TextAppearance.ConversationListItem">
        <item name="android:textSize">@dimen/conversation_list_item_secondary_font_size</item>
        <item name="android:textColor">@color/conversation_secondary_text</item>
    </style>
    <style name="TextAppearance.ConversationTitle" parent="@style/TextAppearance">
        <item name="android:shadowColor">@color/conversation_title_text_shadow_color</item>
