    </style>
    <style name="TextAppearance.RecipientEditor.Primary" parent="@style/TextAppearance.RecipientEditor">
        <item name="android:textColor">@color/recipient_edit_primary_text_color</item>
    </style>
    <style name="TextAppearance.RecipientEditor.Secondary" parent="@style/TextAppearance.RecipientEditor">
        <item name="android:textColor">@color/recipient_edit_secondary_text_color</item>
    </style>
    <style name="TextAppearance.MmsEditor" parent="@*android:style/TextAppearance.Widget.EditText">
        <item name="android:textSize">@dimen/text_font_size_large</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>
    <style name="TextAppearance.MmsEditor.NicknameSpan" parent="@style/TextAppearance.MmsEditor">
