        <item name="android:shadowColor">@color/message_body_mms_text_shadow_color</item>
    </style>
    <style name="TextAppearance.MessageBody.Secondary" parent="@style/TextAppearance.MessageBody">
        <item name="android:textSize">@dimen/message_body_secondary_font_size</item>
        <item name="android:textColor">@color/message_body_secondary_text</item>
        <item name="android:shadowColor">@color/message_body_secondary_text_shadow_color</item>
    </style>
