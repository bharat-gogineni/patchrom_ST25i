        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="SingleViewSlideShowButton">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/single_view_button_bg</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">13.299988dip</item>
        <item name="android:layout_marginRight">13.299988dip</item>
    </style>
