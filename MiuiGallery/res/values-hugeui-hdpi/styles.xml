    <style name="DeepStyle">
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">-0.5</item>
        <item name="android:shadowDy">-0.5</item>
        <item name="android:shadowRadius">0.5</item>
    </style>
    <style name="MultiSelectActionButton">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@*android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_margin">5.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="TitleGradualText">
        <item name="android:textSize">@dimen/title_gradual_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="TitleDescText">
        <item name="android:textSize">@dimen/title_desc_text_size</item>
        <item name="android:textColor">@color/title_desc_text_color</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">6.666992dip</item>
        <item name="android:layout_marginTop">14.666992dip</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="TitlePrimaryText">
        <item name="android:textSize">@dimen/title_primary_text_size</item>
        <item name="android:textColor">@color/title_primary_text_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="TitleSecondaryText">
        <item name="android:textSize">@dimen/title_secondary_text_size</item>
        <item name="android:textColor">@color/title_secondary_text_color</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="TitleCloudIcon">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">right|center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_marginRight">@dimen/action_bar_cloud_icon_margin_right</item>
        <item name="android:src">@drawable/cloud_icon</item>
        <item name="android:scaleType">center</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <style name="HomePageTitleText">
        <item name="android:textSize">@dimen/home_page_title_normal_text_size</item>
        <item name="android:textColor">@color/title_primary_text_color</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/home_page_title_padding_left</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="HomePageTitleContainer">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/title</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/home_page_title_height</item>
    </style>
    <style name="HomePageLargeTitleContainer">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/title</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/home_page_title_height_large</item>
    </style>
    <style name="HomePageTitleNavigatorIcon">
        <item name="android:paddingRight">@dimen/home_page_title_navigator_padding_right</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/right_arrow_navigator</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="HomePageSeparator">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.3299866dip</item>
        <item name="android:src">@drawable/black_frame</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="HomePageItemSeparator">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0.6700001dip</item>
        <item name="android:src">@drawable/home_page_title_divider</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="HomePageSelectionMask">
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:src">@drawable/black_frame</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="AlbumSetPageDragLinearLayout">
        <item name="android:gravity">bottom|center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">@dimen/albumset_tab_width</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    <style name="AlbumSetPageDragText">
        <item name="android:textSize">@dimen/albumset_page_drag_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">1.5dip</item>
    </style>
    <style name="AlbumSetPageNoRecentText">
        <item name="android:textSize">@dimen/title_secondary_text_size</item>
        <item name="android:textColor">@color/no_recent_text</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8.0dip</item>
    </style>
    <style name="AlbumSetPageDragBottomLine">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/albumset_page_drag_bottom_line_height</item>
        <item name="android:layout_marginTop">8.0dip</item>
        <item name="android:src">@drawable/albumset_drag_bottom_line_normal</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="AlbumSetPageDragSeprator">
        <item name="android:layout_width">@dimen/albumset_page_drag_seprator_width</item>
        <item name="android:layout_height">@dimen/albumset_page_drag_seprator_height</item>
        <item name="android:layout_marginTop">3.0dip</item>
        <item name="android:src">@drawable/albumset_drag_bottom_line_normal</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="InformationItemTitleStyle" parent="@*android:attr/textAppearanceMedium">
        <item name="android:gravity">right</item>
        <item name="android:paddingRight">5.0dip</item>
    </style>
    <style name="InformationItemStyle">
        <item name="android:layout_marginBottom">5.0dip</item>
    </style>
    <style name="InformationTextStyle" parent="@*android:attr/textAppearanceMedium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
