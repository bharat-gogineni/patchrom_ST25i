<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Miui.Theme.Holo.Light.NoActionBar" parent="@miui:style/Theme.Light">
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="Theme.Resource.Theme.List" parent="@miui:style/Theme.Light">
        <item name="android:actionBarStyle">@style/Theme.Resource.ActionBar.Style.List</item>
        <item name="android:actionBarSize">@miui:dimen/two_floors_action_bar_height</item>
    </style>
    <style name="Theme.Resource.ActionBar.Style.List" parent="@*android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:title">@string/theme_component_title_all</item>
        <item name="android:logo">@drawable/action_bar_logo</item>
    </style>
    <style name="Theme.Resource.Theme.Wallpaper" parent="@miui:style/Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="WallpaperMenuPopupAnimation" parent="@*android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/wallpaper_menu_popup_fade_in</item>
        <item name="android:windowExitAnimation">@anim/wallpaper_menu_popup_fade_out</item>
    </style>
    <style name="WallpaperInfoPopupAnimation" parent="@*android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/wallpaper_info_popup_fade_in</item>
        <item name="android:windowExitAnimation">@anim/wallpaper_info_popup_fade_out</item>
    </style>
</resources>
