  xmlns:settings="http://schemas.android.com/apk/res/com.android.phone">
    <PreferenceScreen android:persistent="false" android:title="@string/apn_settings" android:key="button_apn_key">
        <intent android:targetPackage="com.android.settings" android:action="android.intent.action.MAIN" android:targetClass="com.android.settings.ApnSettings" />
    </PreferenceScreen>
    <PreferenceScreen android:persistent="false" android:title="@string/preferred_network_type_title_miui" android:key="button_preferred_network_type_key">
        <intent android:targetPackage="com.android.phone" android:action="android.intent.action.MAIN" android:targetClass="com.android.phone.MiuiPreferredNetworkTypeListPreference" />
    </PreferenceScreen>
    <PreferenceScreen android:persistent="false" android:title="@string/networks_title_miui" android:key="button_carrier_sel_key">
        <intent android:targetPackage="com.android.phone" android:action="android.intent.action.MAIN" android:targetClass="com.android.phone.MiuiNetworkSetting" />
    </PreferenceScreen>
</PreferenceScreen>