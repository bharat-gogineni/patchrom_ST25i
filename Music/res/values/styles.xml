        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="miui:indexerTextColor">@color/white_30_transparent</item>
        <item name="miui:indexerBackground">@drawable/alphabet_indexer_bg</item>
    </style>
    <style name="ItemGroupTitleStyle">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/playlist_group_title_text</item>
        <item name="android:background">@drawable/playlist_group_title_bg</item>
